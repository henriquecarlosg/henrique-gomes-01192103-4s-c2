<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListarCachorros">

        <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/ln_Layout"
                android:layout_height="wrap_content">

        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cachorros indicados para crianças: X"
                android:textSize="15sp"
                android:id="@+id/tv_criancaX"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cachorros indicados para crianças: Y"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:id="@+id/tv_criancaY"
                app:layout_constraintTop_toBottomOf="@id/tv_criancaX"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_criancaY"
                android:textSize="15sp"
                android:id="@+id/tv_msg"
                android:layout_marginTop="10sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>